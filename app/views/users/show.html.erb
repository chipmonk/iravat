  <table class="profile" summary="Profile information">
    <tr>
      <td class="main">
       <h1>
         <%= gravatar_for @user %>
          <%= @user.name %>
       </h1>
       <% unless @user.machines.empty? %>
        <table class="machines" summary="User machines">
          <%= render @machines %>
        </table>
        <%= will_paginate @machines %>
      <% end %>
     </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
      <strong>Machines</strong> <%= @user.machines.count %>
    </td>
  </tr>
  <div id="machines">
    <%= render :partial => new_machine_partial_path %>
  </div>
</table>

